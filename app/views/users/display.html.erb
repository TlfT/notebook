

<div style="
  width:$(window).width();
  height:65%;
  background-color:rgba(253,249,249,.67);
  overflow:auto;
  border-radius:10% 10% 10% 10%;
  border-style:solid;
  border-width:12px;
  border-color:rgba(253,249,249,.4);
  padding:3% 3% 3% 3%;
  ">

 <% if current_user.nil? %>

  <% else %>
  <% if User.all.comments.any? %>
  <ol class="comments">
  <%= render @comments %>
</ol>
<%= will_paginate @comments %>
  <% end %>

</div>

